<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.kumaj.customview">

    <application
        tools:replace="android:label"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".sample.ColorfulCircleIndicatorActivity"
            android:label="@string/label_colorful_Circle_indicator">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>

            <intent-filter>
                <action android:name="android.intent.action.RUN"/>

                <category android:name="com.kumaj.customview.sample.SAMPLE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".sample.LoadingDrawableActivity"
            android:label="@string/label_loading_drawable">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>

            <intent-filter>
                <action android:name="android.intent.action.RUN"/>

                <category android:name="com.kumaj.customview.sample.SAMPLE"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".sample.ToningIndicatorActivity"
            android:label="@string/label_toning_indicator">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>

            <intent-filter>
                <action android:name="android.intent.action.RUN"/>

                <category android:name="com.kumaj.customview.sample.SAMPLE"/>
            </intent-filter>
        </activity>

        <activity android:name=".sample.MusicClipViewActivity"
            android:label="@string/label_music_clip_view">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"/>

            <intent-filter>
                <action android:name="android.intent.action.RUN"/>

                <category android:name="com.kumaj.customview.sample.SAMPLE"/>
            </intent-filter>
        </activity>

    </application>

</manifest>