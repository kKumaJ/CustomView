<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_default_padding">

    <top.koguma.musicclipview.MusicClipView
        android:id="@+id/music_clip_view_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:roundCorner="true"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <top.koguma.musicclipview.MusicClipView
        android:id="@+id/music_clip_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:progressbarSelectedColor="@android:color/holo_orange_light"
        app:progressbarColor="@android:color/holo_orange_dark"
        app:roundCorner="true"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <top.koguma.musicclipview.MusicClipView
        android:id="@+id/music_clip_view_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:progressbarSelectedColor="@android:color/holo_blue_bright"
        app:progressbarColor="@android:color/holo_blue_dark"
        app:roundCorner="true"/>

</LinearLayout>